<!--pages/text/text.wxml-->
<!-- 1.基本使用，text不会换行，只能加\n换行-->
<text>Hello World \n</text>
<text>小程序\n</text>

<!-- 2.selectable:true，默认false-->
<!-- 下面2种写法都是true，推荐第二种写法 -->
<text selectable="{{true}}">selectable\n</text>
<text selectable>selectable\n</text>

<!-- 3.space：决定文本空格的大小 -->
<text>Hellow World\n</text>
<text space="nbsp">Hellow World\n</text>
<text space="ensp">Hellow World\n</text>
<text space="emsp">Hellow World\n</text>

<!-- 4.decode：是否解码文本 -->
<text decode>5 &gt; 3</text>