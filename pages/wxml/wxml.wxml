</block>

<view>----item/index起名字------</view>
<view wx:for='{{movies}}' 
      wx:for-item='movi'
      wx:for-index='u'>{{movi}} {{u}}
</view>

<!-- template及导入 -->
<import src="/wxml/template.wxml"/>

